<%- include('partials/header'); -%>

<h1>Compose</h1>

<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" name="postTitle" class="form-control" placeholder="Give a suitable title">
    </div>
    <div class="form-group">
        <label for="postData">Content</label>
        <textarea name="postData" cols="35" rows="5" class="form-control" placeholder="Write detailed post here"></textarea>
    </div>
    <div class="form-group">
        <label for="author">Author</label>
        <input type="text" name="author" class="form-control" placeholder="Who's the author?">
    </div>
    <div class="form-group">
        <label for="contentSource">Content Source</label>
        <input type="text" name="contentSource" class="form-control" placeholder="Enter references and citations separated by semicolon">
    </div>
    <div class="form-group">
        <label for="contentSource">Tags</label>
        <input type="text" name="tags" class="form-control" placeholder="Enter tags separated by semicolon">
    </div>
    <div class="form-group">
        <label for="contentSource">Related Articles</label>
        <input type="text" name="relatedPosts" class="form-control" placeholder="Link to another related article">
    </div>
    <div class="form-group">
        <label>Rating</label>
        <span class="ratingAmount"></span>
        <span class="starRating" data-rating="1">☆</span>
        <span class="starRating" data-rating="2">☆</span>
        <span class="starRating" data-rating="3">☆</span>
        <span class="starRating" data-rating="4">☆</span>
        <span class="starRating" data-rating="5">☆</span>
    </div>
    <button type="submit" name="button" class="btn btn-primary">Publish</button>
</form>

<%- include('partials/footer'); -%>
