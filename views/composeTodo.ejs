<%- include('partials/header'); -%>

<h1>Your TODO list</h1>

<form action="/todo/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Task</label>
        <input type="text" name="subject" class="form-control" placeholder="Task">
    </div>
    <div class="form-group">
        <label for="postData">Write a task</label>
        <textarea name="notepad" cols="35" rows="5" class="form-control" placeholder="Write here"></textarea>
    </div>
    <button type="submit" name="save" class="btn btn-primary">Save</button>
    <button type="submit" name="discard" class="btn btn-primary">Discard</button>
    <button type="submit" name="share" class="btn btn-primary">Share</button>
</form>

<%- include('partials/footer'); -%>
