<%- include('partials/header'); -%>

<h1>New Task</h1>

<form action="/todo/compose" method="get">
    <div class="form-group">
        <label for="postTitle">Subject</label>
        <input type="text" name="subject" class="form-control" placeholder="Task">
    </div>
    <div class="form-group">
        <label for="todo">Details</label>
        <textarea name="todo" cols="35" rows="5" class="form-control" placeholder="Write here"></textarea>
    </div>
    <div class="form-group">
        <label for="todo">Reminder</label><br/>
        Every
        <input type="text" size="2">
        <select>
            <option>Minute</option>
            <option>Hourly</option>
            <option>Daily</option>
            <option>Weekly</option>
            <option>Monthly</option>
            <option>Yearly</option>
            <option>Just once</option>
        </select>
        <label for="todo">starting</label>
        today
    </div>
    <br/>
    <button type="submit" name="save" class="btn btn-primary">Save</button>
    <button type="submit" name="discard" class="btn btn-primary">Discard</button>
</form>

<%- include('partials/footer'); -%>
